{% extends 'admin/base.html.twig' %}

{% block main %}
<style>
    .fa-ul>li {
    margin-top: 15px;
}
</style>

<h2>Categories list</h2>
    {% include 'admin/includes/_sub_admin_category.html.twig' with  {'subCategories': results} only %}
<form action="{{ path('categories.store') }}" method="POST">
    <div class="col-md-4 mb-3">
        <label for="validationServer01">Add new category</label>
        <input type="text" class="form-control is-invalid" id="validationServer01" placeholder="Category name" name="name"
            >
        <br>
	    <label for="inlineFormCustomSelect">Parent:</label>
        <select class="custom-select mr-sm-2" id="inlineFormCustomSelect" name="parent_category_id">
            <option value="">--No parent--</option>
            {% include 'admin/includes/_edit_admin_category.html.twig' with  {'subCategories': results, 'index': 0, 'isEdit': false} only %}
        </select>
        <div class="invalid-feedback">
            Category already exists!
        </div>
        <button class="btn btn-primary mt-3" type="submit">Add</button>
    </div>
</form>


{%  endblock %}