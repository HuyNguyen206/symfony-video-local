<ul class="fa-ul text-left">
    {% for category in subCategories %}
        <li><i class="fa-li fa fa-arrow-right"></i>{{ category.name }}
                <a href="{{ path('categories.edit', {'id': category.id}) }}">edit</a>
                <form style="display: none" id="delete-{{ category.id }}" action="{{ path('categories.delete', {'id': category.id}) }}" method="post">
                        <input type="hidden" value="DELETE" name="_method" >
                </form>
                <a href="" onclick="event.preventDefault(); if(confirm('Are you sure?')) { document.getElementById('delete-{{ category.id }}').submit() }">
                        delete
                </a>
        </li>
        {% if category.getSubCategories()|length > 0 %}
            {% include 'admin/includes/_sub_admin_category.html.twig' with  {'subCategories': category.subCategories} only %}
        {% endif %}
    {% endfor %}
</ul>

